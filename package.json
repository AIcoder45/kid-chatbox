{
  "name": "kid-chatbox",
  "version": "1.0.0",
  "description": "AI Tutor Quiz Application for Kids",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:server": "node server/index.js",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "tsc && vite build",
    "build:prod": "NODE_ENV=production npm run build",
    "preview": "vite preview",
    "start": "NODE_ENV=production node server/index.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "logs:pm2": "pm2 logs kidchatbox-api",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "db:create": "node create-database.js",
    "db:setup": "node server/scripts/setup-db.js",
    "db:migrate": "node server/scripts/migrate-schema.js",
    "db:migrate-plans": "node server/scripts/migrate-plans-schema.js",
    "db:migrate-scheduled-tests": "node server/scripts/migrate-scheduled-tests.js",
    "db:test": "node test-db-connection.js"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@splinetool/react-spline": "^4.1.0",
    "@splinetool/runtime": "^1.12.16",
    "@types/three": "^0.182.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "framer-motion": "^10.16.4",
    "fuse.js": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "jspdf": "^2.5.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.11",
    "openai": "^4.20.1",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^3.5.1",
    "three": "^0.182.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.26",
    "@types/pg": "^8.15.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
